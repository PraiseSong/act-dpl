.floatBox{
    zoom: 1;
}
.floatBox:after{
    display: block;
    clear: both;
    content: "";
    visibility: hidden;
    height: 0;
}
.c-m2{
    width: 490px;
    height: 350px;
}
.c-m2 .product{
    background: #fff;
    width: 244px;
    height: 350px;
    float: left;
    display: inline;
    position: relative;
    overflow: hidden;
    border-top: 1px dotted #dbdbdb;
}
.c-m2 .first{
    border-right: 1px dotted #dbdbdb;
}
.c-m2 .product a{
    display: block;
    text-decoration: none;
    height: 100%;
    overflow: hidden;
}
.c-m2 .product .hitCounter{
    position: absolute;
    left: 0;
    bottom: 25px;
    z-index: 2;
    width: 100%;
    height: 13px;
    line-height: 13px;
    text-align: center;
    text-decoration: none;
    color: #b4b4b4;
}
.c-m2 .product .people{
    text-decoration: none;
    color: #ff793a;
    font-size: 14px;
    padding: 0 3px;
}
.c-m2 .product .l{
    text-decoration: none;
    background: url(http://img03.taobaocdn.com/tps/i3/T1uCeGXy4fXXcPKFza-17-12.jpg) no-repeat left center;
    padding-left: 20px;
}
.c-m2 .product .hit{
    display: block;
    width: 109px;
    height: 109px;
    position: absolute;
    z-index: 2;
    left: 67.5px;
    top: 120.5px;
    cursor: pointer;
    text-indent: -10000px;
    background: url(http://img02.taobaocdn.com/tps/i2/T1fYOHXCVfXXbIJlZw-109-109.png) no-repeat;
    *background: url(http://img02.taobaocdn.com/tps/i2/T1Rr5JXtlbXXbxF8Zw-109-109.gif) no-repeat;
}